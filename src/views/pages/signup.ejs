<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head'); %>
	</head>
	<body class="container">
	<%- include('../partials/header'); %>
		<main>
			<div class="container pt-5">
				<h1>Inscription</h1>
				<div class="jumbotron">
					<form method="post" action="/inscription" novalidate>
						<div class="form-group">
							<label for="username">Nom d'utilisateur : </label>
							<input
								name="username"
								id="username"
								type="text"
								placeholder="Nom d'utilisateur"
							/><span></span>
						</div>
						<div class="form-group">
							<label for="email">Adresse courriel : </label>
							<input name="email" id="email" type="email" placeholder="exemple@seraphii.me" />
						</div>
						<div class="form-group">
							<label for="password">Mot de passe : </label>
							<input name="password" id="password" type="password" placeholder="Mot de passe" />
							<label for="confPwd">Confirmez le mot de passe : </label>
							<input name="confPwd" id="confPwd" type="password" placeholder="Mot de passe" />
						</div>
						<input type="submit" value="S'inscrire" />
					</form>
				</div>
			</div>
		</main>
	</body>
</html>
